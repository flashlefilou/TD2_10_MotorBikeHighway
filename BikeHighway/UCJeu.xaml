<UserControl x:Class="MotorBikeHighway.UCJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MotorBikeHighway"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="455">
    <Grid>
        <Canvas Panel.ZIndex="2">
            <TextBlock x:Name="txtScore" Text="Score : 0" FontSize="20" FontWeight="Bold" Foreground="White" Margin="10"/>
            <TextBlock x:Name="txtVies" Text="Vies : 1" FontSize="20" FontWeight="Bold" Foreground="White" Margin="150,10,10,10"/>
            <Button x:Name="butOptions" Content="Options" Margin="15" Canvas.Right="0"/>
        </Canvas>

        <Canvas x:Name="canvasJeu" Panel.ZIndex="1">
            <Image x:Name="imgMoto" Source="/img/moto.png" Width="75" Height="130" 
            Canvas.Left="190" Canvas.Top="500"/> 
        </Canvas>
    </Grid>
</UserControl>
