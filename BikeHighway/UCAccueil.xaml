<UserControl x:Class="MotorBikeHighway.UCAccueil"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MotorBikeHighway"
             mc:Ignorable="d" 
             d:DesignHeight="665" d:DesignWidth="455">
    <UserControl.Background>
        <ImageBrush ImageSource="/img/FondAccueil.png"/>
    </UserControl.Background>
    <Grid>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="220">
            <Button x:Name="butJouer" Content="JOUER" Height="55" FontSize="22" Margin="0,15" Background="#DDDDDD"/>

            <Button x:Name="butOptions" Content="OPTIONS" Height="55" FontSize="22" Margin="0,15" Background="#DDDDDD" />

            <Button x:Name="butChoixMoto" Content="PERSONNALISER" Height="55" FontSize="22" Margin="0,15" Background="#DDDDDD"/>

            <Button Content="QUITTER" Height="55" FontSize="22" Margin="0,15" Click="BtnQuitter_Click" Background="#DDDDDD"/>
        </StackPanel>
    </Grid>
</UserControl>
