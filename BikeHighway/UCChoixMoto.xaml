<UserControl x:Class="MotorBikeHighway.UCChoixMoto"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MotorBikeHighway"
             mc:Ignorable="d" 
             d:DesignHeight="665" d:DesignWidth="445"
             >
    <Grid>
        
        <Image x:Name="imageMotoChoix" Source="img/moto.png" Margin="102,187,101,150"/>
        <Button x:Name="butdroit" Content="&#x25BA;" HorizontalAlignment="Left" Margin="315,326,0,0" VerticalAlignment="Top" Height="38" Width="26" FontSize="16" FontFamily="Arial" Click="butdroit_Click"/>
        <Label x:Name="labTitre" Content="Choisir votre moto" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White" Margin="0,70,0,530" Background="#FF5B5B5B" Width="380" Height="65" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="butgauche" Content="&#x25C4;" HorizontalAlignment="Left" Margin="100,332,0,0" VerticalAlignment="Top" Height="38" Width="26" FontSize="16" FontFamily="Arial" Click="butgauche_Click" RenderTransformOrigin="1.654,0.539"/>
        <Button x:Name="butJouer" Content="Jouer" Height="48" Width="150" FontSize="20" Margin="148,520,147,0" Click="butJouer_Click"/>

    </Grid>
</UserControl>
